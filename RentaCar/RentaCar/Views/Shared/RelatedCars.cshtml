@model RentaCar.Entities.ViewModels.CarViewModel

<div class="row">
    @foreach (var item in Model.Cars)
    {
        <div class="col-md-4">
            <div class="car-wrap rounded ftco-animate">
                <div class="img rounded d-flex align-items-end" style="background-image: url(/images/@item.Image);">
                </div>
                <div class="text">
                    <h2 class="mb-0"><a href="car-single.html">@item.Model</a></h2>
                    <div class="d-flex mb-3">
                        <span class="cat">@item.Brand</span>
                        <p class="price ml-auto">@item.Rental <span>/gün</span></p>
                    </div>
                    <p class="d-flex mb-0 d-block"><a href="#" class="btn btn-primary py-2 mr-1">Şimdi Kirala</a> <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-secondary py-2 ml-1">Detaylar</a></p>
                </div>
            </div>
        </div>
    }
</div>
