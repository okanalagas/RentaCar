@model IEnumerable<RentaCar.Entities.Models.Car>
@{
    ViewData["Title"] = "Index";
}

<section class="hero-wrap hero-wrap-2 js-fullheight" style="background-image: url('/images/bg_3.jpg');" data-stellar-background-ratio="0.5">
	<div class="overlay"></div>
	<div class="container">
		<div class="row no-gutters slider-text js-fullheight align-items-end justify-content-start">
			<div class="col-md-9 ftco-animate pb-5">
				<p class="breadcrumbs"><span class="mr-2"><a asp-controller="Home" asp-action="Index">Anasayfa <i class="ion-ios-arrow-forward"></i></a></span> <span>FİYATLAR <i class="ion-ios-arrow-forward"></i></span></p>
				<h1 class="mb-3 bread">Fiyatlar</h1>
			</div>
		</div>
	</div>
</section>

<section class="ftco-section ftco-cart">
	<div class="container">
		<div class="row">
			<div class="col-md-12 ftco-animate">
				<div class="car-list">
					<table class="table">
						<thead class="thead-primary">
							<tr class="text-center">
								<th>&nbsp;</th>
								<th>&nbsp;</th>
								<th class="bg-primary heading">Saatlik Ücret</th>
								<th class="bg-dark heading">Günlük Ücret</th>
								<th class="bg-black heading">Aylık Ücret</th>
							</tr>
						</thead>
						<tbody>				
								@foreach (var item in Model)
							{
								<tr class="">
									<td class="car-image"><div class="img" style="background-image:url(/images/@item.Image);"></div></td>
									<td class="product-name">
										<h3>@item.Brand @item.Model</h3>
										<p class="mb-0 rated">
											<span>puan:</span>
											<span class="ion-ios-star"></span>
											<span class="ion-ios-star"></span>
											<span class="ion-ios-star"></span>
											<span class="ion-ios-star"></span>
											<span class="ion-ios-star"></span>
										</p>
									</td>

									<td class="price">
										<p class="btn-custom"><a href="#">Şimdi Kirala</a></p>
										<div class="price-rate">
											<h3>
												<span class="num"><small class="currency">₺</small> @(Math.Floor(item.Rental/10))</span>
												<span class="per">/saat</span>
											</h3>
											<span class="subheading">₺60/ilave yakıt ücreti</span>
										</div>
									</td>

									<td class="price">
										<p class="btn-custom"><a href="#">Şimdi Kirala</a></p>
										<div class="price-rate">
											<h3>
												<span class="num"><small class="currency">₺</small> @(Math.Floor(item.Rental))</span>
												<span class="per">/gün</span>
											</h3>
											<span class="subheading">₺60/ilave yakıt ücreti</span>
										</div>
									</td>

									<td class="price">
										<p class="btn-custom"><a href="#">Şimdi Kirala</a></p>
										<div class="price-rate">
											<h3>
												<span class="num"><small class="currency">₺</small> @(Math.Floor(item.Rental*25))</span>
												<span class="per">/ay</span>
											</h3>
											<span class="subheading">₺60/ilave yakıt ücreti</span>
										</div>
									</td>
								</tr>								
							}						
						</tbody>
					</table>
				</div>
			</div>
		</div>
	</div>
</section>

